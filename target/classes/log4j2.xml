<?xml version="1.0" encoding="UTF-8"?>  
<configuration status="OFF" monitorInterval="5" >  
  <appenders>  
    <Console name="Console" target="SYSTEM_OUT">  
      <PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss.SSS} [%c-%p : %t]  %m%n"/>
    </Console>
    
     <RollingFile name="RollingFile" fileName="C:/znms/logs/znms.log" filePattern="C:/znms/logs/$${date:yyyy-MM}/znms-%d{MM-dd-yyyy}-%i.log">
     	<PatternLayout pattern="%-d{yyyy-MM-dd HH:mm:ss} [%c-%p : %t]  %m%n"/>
     	<SizeBasedTriggeringPolicy size="2MB"/>
     	<DefaultRolloverStrategy max="1000"/>
     </RollingFile>
    
  </appenders>  
  <loggers>  
    <root level="INFO">  
      <appender-ref ref="Console"/>
      <appender-ref ref="RollingFile"/>
    </root>  
  </loggers>  
</configuration>  