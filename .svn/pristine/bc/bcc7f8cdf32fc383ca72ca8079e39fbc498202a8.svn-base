@charset "utf-8";
/* CSS Document */

.sm_width_80b{ width:80%; height:95%; margin:1%; position:absolute; }
.sm_star_right_menu{ position:absolute; right:0; z-index:999; width:17%; height:100%;float:right; border-collapse:separate; border-spacing:10px; }
.sm_star_right_menu td{ background:rgba(0,246,246,0.1); vertical-align:middle;}
.sm_width_50b{ width:50%;}
.sm_height_15b{ height:15%;}

/*.sm_adapt_mod{   width:90%; height:60%; margin:0 auto; text-align:center}
.sm_adapt_mod i{ width:50px; height:50px;}*/
.sm_adapt_mod_b{ width:45%;text-align:center;}
.sm_adapt_mod_b1{ width:38%;text-align:right;}
.sm_adapt_mod{   width:90%; height:60%; margin:0 auto; text-align:center;}
.sm_adapt_mod i,.sm_adapt_mod_b i,.sm_adapt_mod_b1 i{ width:50px; height:50px;}
/* 设置了浏览器小于768px时  */
@media screen and (max-height:768px) {
    .sm_adapt_mod i{ width:35px; height:35px;}
    .sm_star_right_menu{ width:19%; height:100%;float:right; border-collapse:separate; border-spacing:10px; }
}
.sm_fontcol_f60{ color:#fc0;}
.sm_font_2vw{ font-size:1.5vw;}

.sm_fontcol_9f0{ color:#9f0;}
.sm_title_h{ font-size:0.5vw; color:#0cf; font-weight:normal; text-align:center; margin:1% 0;}
.sm_height_35b{ height:35%;}
.sm_wired_wireless{ text-align:center;}
.sm_wired_wireless li{ width:49%;  display: inline-table;  }
.sm_wired_9f0{color:#9f0;}
.sm_wireless_c90{color:#c90;}
.sm_wired1x_0cf{color:#0cf;}
.sm_portal_ff0{color:#ff0;}


@media screen and (max-width:1920px) {
	.wired_wireless{margin: 0 0 0 10%}
}
@media screen and (max-width:1600px) {
.sm_terminal{margin: 0 35px 0 0;}
.sm_terminal li{width:0;margin: 0 -17px 0 0;}
.sm_height_15b{ height:17%;}
.sm_adapt_mod{   width:90%; height:75%; margin:0 auto; text-align:center;}
.sm_adapt_mod_b{ width:37%;text-align:center;}
.wired_wireless{margin: 0 0 0 11%}
}
@media screen and (max-width:1366px) {
.sm_terminal{margin: 0 10px 0 0;}
.sm_terminal li{width:0;margin: 0 -10px 0 0;}   
.sm_height_15b{ height:16%;}
.sm_adapt_mod_b{ width:37%;text-align:center;}
.sm_data_amod{margin-left: 7px;}
.wired_wireless{margin: 0 0 0 15%}
}
@media screen and (max-width:1280px) {
.sm_height_15b{ height:10%;}

.sm_text_center{ text-align:center;}

.sm_more_f90{color:#f90;}
.sm_terminal .sm_font_2vw{ font-size:18px;}

